#!/bin/bash

mkdir -p "$HOME/.bashrc.d"
mkdir -p "$HOME/bin"

# These do not exist in git bash shell
touch "$HOME/.profile"
touch "$HOME/.bashrc"

if ! grep --quiet "Source custom scripts" "$HOME/.bashrc"; then
cat >> "$HOME/.bashrc" <<EOF

# Source custom scripts
export SETUP_PATH="$PWD"
for f in \$HOME/.bashrc.d/*.sh; do
   . "\$f"
done
EOF
fi

ln -s --force files/self.sh "$HOME/.bashrc.d/self.sh"
ln -s --force files/mem.sh "$HOME/.bashrc.d/mem.sh"
ln -s --force files/bash-bindings.sh "$HOME/.bashrc.d/bash-bindings.sh"
